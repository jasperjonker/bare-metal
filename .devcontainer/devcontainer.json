{
    "name": "Development Container",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "WORKSPACE": "${containerWorkspaceFolder}"
        },
        "options": [
            "--network=host"
        ]
    },
    "remoteUser": "ubuntu",
    "updateRemoteUserUID": true,
    // "features": {
    //     "ghcr.io/mikaello/devcontainer-features/modern-shell-utils:latest": {},
    //     "ghcr.io/devcontainers-contrib/features/pre-commit:2": {},
    //     "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
    // },
    // Persistent history (e.g. shell), see https://code.visualstudio.com/docs/devcontainers/tips-and-tricks#_persisting-user-profile
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
        "source=profile,target=/root,type=volume",
        "target=/root/.vscode-server,type=volume",
        "type=bind,source=/dev/bus/usb,target=/dev/bus/usb"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.profiles.linux": {
                    "zsh": {
                        "path": "/bin/zsh",
                        "icon": "terminal-linux"
                    }
                },
                "terminal.integrated.hideOnStartup": "whenEmpty"
            },
            "extensions": [
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.hexeditor",
                "ms-vscode.vscode-serial-monitor",
                "GitHub.copilot",
                "vscodevim.vim",
                "nordic-semiconductor.nrf-devicetree",
                "nordic-semiconductor.nrf-kconfig",
                "nordic-semiconductor.nrf-terminal",
                "akamud.vscode-theme-onedark",
                "aaron-bond.better-comments",
                "marus25.cortex-debug",
                "mcu-debug.debug-tracker-vscode",
                "mcu-debug.memory-view",
                "mcu-debug.rtos-views",
                "mcu-debug.peripheral-viewer",
                "cschlosser.doxdocgen",
                "eamodio.gitlens"
            ]
        }
    },
    // Priviliged mode is needed for USB access
    "privileged": true,
    // Due to SELinux manually mount the workspace folder
    "workspaceMount": "",
    // Needed for ptrace-based debuggers like C++, Go, and Rust
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined",
        "--volume=${localWorkspaceFolder}:/workspaces/${localWorkspaceFolderBasename}:Z"
    ],
    "forwardPorts": [
        3000
    ]
}
