{
    "configurations": [
        {
            "name": "(gdb) ST-Link",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceFolder}/build/firmware.elf",
            "preLaunchTask": "Build & Flash",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "raw",
            "servertype": "stlink",
            "interface": "swd",
            "armToolchainPath": "/opt/arm/13.3.rel1/bin/",
            // "gdbPath": "/opt/arm/13.3.rel1/bin/arm-none-eabi-gdb",
            // "gdbTarget": "localhost:3333",
            "svdFile": "${workspaceFolder}/resources/STM32G431.svd",
            "device": "STM32G431KB",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 1
            }
        },
        {
            "name": "(gdb) J-Link",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/firmware.elf",
            "preLaunchTask": "Build & Flash",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none",
            "servertype": "jlink",
            "armToolchainPath": "/opt/arm/bin/",
            "svdFile": "${workspaceFolder}/resources/STM32G431.svd",
            "device": "STM32G431KB",
            "interface": "swd"
        }
    ]
}
